<!--<RuleML xmlns="http://www.ruleml.org/1.0/xsd"
  xmlns:xs="http://www.w3.org/2001/XMLSchema"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.ruleml.org/1.0/xsd http://www.ruleml.org/1.0/xsd/naffolog.xsd"> -->

<RuleML
xmlns="http://www.ruleml.org/1.0/xsd"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
>
<Assert>

	<Entails>
	
		<Rulebase>
		    
		   <!-- a particular person is a student -->
		    <Atom>
		      <Rel>student</Rel>
		      <Ind>personA</Ind>
		    </Atom>
           
		    <!--a particular person is an employee -->
		    <!-- 
		     <Atom>
		       <Rel>employee</Rel>
		       <Ind>personA</Ind>
		       <Ind>companyB</Ind>
		     </Atom>
		     -->
			 
		   <!--a student is a fulltime-student if the student cannot be proved as a parttime-student -->
		    
		    <Implies material="yes">
		      <then>
		        <Atom><Rel>fulltime-student</Rel><Var>person</Var></Atom>
		      </then>
		      <if>
		        <And>
		          <Atom><Rel>student</Rel><Var>person</Var></Atom>
		          <Naf><Atom><Rel>parttime-student</Rel><Var>person</Var></Atom></Naf>
		        </And>
		      </if>
		    </Implies>
		    
		</Rulebase>
		
		<!--An integrity constraint that a fulltime-student cannot also be an employee of a company-->
		
		<Rulebase>
		    <Neg>
		      <And>
		        <Atom>
		          <Rel>fulltime-student</Rel>
		          <Var>person</Var>
		        </Atom>
		        <Atom>
		          <Rel>employee</Rel>
		          <Var>person</Var>
		          <Var>company</Var>
		        </Atom>       
		      </And>
		    </Neg>
		</Rulebase>
		
	</Entails>

</Assert>
	
</RuleML>
 
 
       
    
           
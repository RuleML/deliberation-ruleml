<!-- <RuleML xmlns="http://ruleml.org/spec"
  xmlns:xs="http://www.w3.org/2001/XMLSchema"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://ruleml.org/spec http://www.ruleml.org/1.0/xsd/hornlog.xsd">
  
<RuleML xmlns="http://ruleml.org/spec"
    xmlns:xs="http://www.w3.org/2001/XMLSchema"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    >
    
  <Assert mapClosure="universal">
    <!-- POSL r(![a->b]) -->
    <Rulebase>
      <Atom>
        <op>
          <Rel>r</Rel>
        </op>
        <resl>
          <Plex>
            <slot>
              <Ind>a</Ind>
              <Ind>b</Ind>
            </slot>
          </Plex>
        </resl>
      </Atom>
    </Rulebase>
  </Assert>


  <Query>
    <!-- POSL r(![a->?X]) -->
    <Atom>
      <op>
        <Rel>r</Rel>
      </op>
      <resl>
        <Plex>
          <slot>
            <Ind>a</Ind>
            <Var>X</Var>
          </slot>
        </Plex>
      </resl>
    </Atom>
  </Query>
  <!-- 
  
  Specified Results
  Success
  
  Variable
  <Var>X</Var>
  
  Value
  <Ind>b</Ind>

  Actual Results
  Failure

  -->

  <!-- <RetractAll/> -->
  <!-- By Comparison ... -->
  <Assert mapClosure="universal">
    <!-- POSL r(a->b) -->
    <Rulebase>
      <Atom>
        <op>
          <Rel>r</Rel>
        </op>
        <slot>
          <Ind>a</Ind>
          <Ind>b</Ind>
        </slot>
      </Atom>
    </Rulebase>
  </Assert>

  <Query>
    <!-- POSL r(a->?X) -->
    <Atom>
      <op>
        <Rel>r</Rel>
      </op>
      <slot>
        <Ind>a</Ind>
        <Var>X</Var>
      </slot>
    </Atom>
  </Query>
  <!-- 
    Specified Results
    Success
    
    Variable
    <Var>X</Var>
    
    Value
    <Ind>b</Ind>
    
    Actual Results = Specified Results
  -->

</RuleML>

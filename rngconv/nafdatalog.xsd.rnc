default namespace = "http://www.ruleml.org/1.0/xsd"

start =
  torso
  | transaction
  | Implies
  | Query
  | Assert
  | Naf
  | arg
  | Retract
  | Data
  | Atom
  | oid
  | if
  | Rulebase
  | slot
  | Reify
  | Equivalent
  | op
  | Rel
  | Ind
  | declare
  | degree
  | Forall
  | Exists
  | then
  | Or
  | Skolem
  | weak
  | RuleML
  | Var
  | Entails
  | And
torso = element torso { Atom }
transaction =
  element transaction {
    attribute index { xsd:positiveInteger },
    (Assert | Retract | Query)
  }
Implies =
  element Implies {
    attribute material { xsd:NMTOKEN "yes" | xsd:NMTOKEN "no" }?,
    attribute direction {
      xsd:NMTOKEN "backward"
      | xsd:NMTOKEN "forward"
      | xsd:NMTOKEN "bidirectional"
    }?,
    attribute closure {
      xsd:NMTOKEN "universal" | xsd:NMTOKEN "existential"
    }?,
    oid?,
    ((then, if)
     | (if, then)
     | ((Atom | And | Or | Naf), Atom))
  }
Query =
  element Query {
    attribute closure {
      xsd:NMTOKEN "universal" | xsd:NMTOKEN "existential"
    }?,
    oid?,
    (formula | Rulebase | Atom | And_2 | Or_2 | Entails | Exists | Naf)*
  }
Assert =
  element Assert {
    attribute mapMaterial { xsd:NMTOKEN "yes" | xsd:NMTOKEN "no" }?,
    attribute mapClosure {
      xsd:NMTOKEN "universal" | xsd:NMTOKEN "existential"
    }?,
    attribute mapDirection {
      xsd:NMTOKEN "backward"
      | xsd:NMTOKEN "forward"
      | xsd:NMTOKEN "bidirectional"
    }?,
    oid?,
    (formula_2
     | Rulebase
     | Atom
     | Implies
     | Equivalent
     | Entails
     | Forall)*
  }
Naf = element Naf { oid?, (weak | Atom) }
arg =
  element arg {
    attribute index { xsd:positiveInteger },
    (Ind | Data | Var | Skolem | Reify)
  }
Retract =
  element Retract {
    attribute mapMaterial { xsd:NMTOKEN "yes" | xsd:NMTOKEN "no" }?,
    attribute mapClosure {
      xsd:NMTOKEN "universal" | xsd:NMTOKEN "existential"
    }?,
    attribute mapDirection {
      xsd:NMTOKEN "backward"
      | xsd:NMTOKEN "forward"
      | xsd:NMTOKEN "bidirectional"
    }?,
    oid?,
    (formula_2
     | Rulebase
     | Atom
     | Implies
     | Equivalent
     | Entails
     | Forall)*
  }
Data =
  element Data {
    text
    & (attribute * { text }
       | _1)*
  }
Atom =
  element Atom {
    attribute closure {
      xsd:NMTOKEN "universal" | xsd:NMTOKEN "existential"
    }?,
    oid?,
    degree?,
    (op | Rel),
    slot*,
    ((arg | Ind | Data | Var | Skolem | Reify)+, slot*)?
  }
oid = element oid { Ind | Data | Var | Skolem | Reify }
if = element if { Atom | And | Or | Naf }
Rulebase =
  element Rulebase {
    attribute mapMaterial { xsd:NMTOKEN "yes" | xsd:NMTOKEN "no" }?,
    attribute mapDirection {
      xsd:NMTOKEN "backward"
      | xsd:NMTOKEN "forward"
      | xsd:NMTOKEN "bidirectional"
    }?,
    attribute mapClosure {
      xsd:NMTOKEN "universal" | xsd:NMTOKEN "existential"
    }?,
    oid?,
    (formula_3 | Atom | Implies_2 | Equivalent_2 | Forall_2)*
  }
slot =
  element slot {
    attribute weight {
      xsd:decimal { minInclusive = "0" maxInclusive = "1" }
    }?,
    attribute card { xsd:nonNegativeInteger }?,
    (Ind | Data),
    (Ind | Data | Var | Skolem | Reify)
  }
Reify =
  element Reify {
    (torso
     | transaction
     | Implies
     | Query
     | Assert
     | Naf
     | arg
     | Retract
     | Data
     | Atom
     | oid
     | if
     | Rulebase
     | slot
     | Reify
     | Equivalent
     | op
     | Rel
     | Ind
     | declare
     | degree
     | Forall
     | Exists
     | then
     | Or
     | Skolem
     | weak
     | RuleML
     | Var
     | Entails
     | And)?
  }
Equivalent =
  element Equivalent {
    attribute closure {
      xsd:NMTOKEN "universal" | xsd:NMTOKEN "existential"
    }?,
    oid?,
    ((torso, torso) | (Atom, Atom))
  }
op = element op { Rel }
Rel =
  element Rel {
    text
    & attribute iri { xsd:anyURI }?
  }
Ind =
  element Ind {
    text
    & (attribute iri { xsd:anyURI }?,
       attribute type { xsd:string }?)
  }
declare = element declare { Var }
degree = element degree { Data }
Forall =
  element Forall {
    oid?,
    (declare | Var)+,
    (formula_4 | Atom | Implies | Equivalent | Forall)
  }
Exists =
  element Exists {
    oid?, (declare | Var)+, (formula_5 | Atom | And | Or | Exists)
  }
then = element then { Atom }
Or = element Or { oid?, (formula_6 | Atom | And | Or | Naf)* }
Skolem =
  element Skolem {
    text
    & attribute type { xsd:string }?
  }
weak = element weak { Atom }
RuleML =
  element RuleML { oid?, (transaction | Assert | Retract | Query)* }
Var =
  element Var {
    text
    & attribute type { xsd:string }?
  }
Entails =
  element Entails { oid?, (if_2 | Rulebase), (then_2 | Rulebase) }
And = element And { oid?, (formula_6 | Atom | And | Or | Naf)* }
formula =
  element formula {
    Rulebase | Atom | And_2 | Or_2 | Entails | Exists | Naf
  }
And_2 =
  element And {
    attribute closure {
      xsd:NMTOKEN "universal" | xsd:NMTOKEN "existential"
    }?,
    oid?,
    (formula_6 | Atom | And | Or | Naf)*
  }
Or_2 =
  element Or {
    attribute closure {
      xsd:NMTOKEN "universal" | xsd:NMTOKEN "existential"
    }?,
    oid?,
    (formula_6 | Atom | And | Or | Naf)*
  }
formula_2 =
  element formula {
    Rulebase | Atom | Implies | Equivalent | Entails | Forall
  }
_1 =
  element * {
    text
    & (attribute * { text }
       | _1)*
  }
formula_3 =
  element formula { Atom | Implies_2 | Equivalent_2 | Forall_2 }
Implies_2 =
  element Implies {
    text
    & (attribute * { text }
       | _1)*
  }
Equivalent_2 =
  element Equivalent {
    text
    & (attribute * { text }
       | _1)*
  }
Forall_2 =
  element Forall {
    text
    & (attribute * { text }
       | _1)*
  }
formula_4 = element formula { Atom | Implies | Equivalent | Forall }
formula_5 = element formula { Atom | And | Or | Exists }
formula_6 = element formula { Atom | And | Or | Naf }
if_2 = element if { Rulebase }
then_2 = element then { Rulebase }

<?xml version="1.0" encoding="UTF-8"?>
<RuleML xmlns="http://ruleml.org/spec"
  xmlns:xs="http://www.w3.org/2001/XMLSchema"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://ruleml.org/spec ../../../xsd/datalog.xsd">

                                                 
<!-- A Simple example to test Unary predicates in datalog -->
   
  <Assert mapClosure="universal">
    
       
    <!-- wine08 is precious -->		
    <Atom>
      <Rel>precious</Rel>
      <Ind>wine08</Ind>
    </Atom>

    
    <!-- Something is precious if it is wine and it is old -->
    <Implies>
      <then>
        <Atom>
          <op><Rel>precious</Rel></op>
          <Var>x</Var>
        </Atom>
      </then>
      <if>
        <And>
          <Atom>
            <op><Rel>wine</Rel></op>
            <Var>x</Var>
          </Atom>
          <Atom>
            <op><Rel>old</Rel></op>
            <Var>x</Var>
          </Atom>
        </And>	 
      </if>
    </Implies>

  </Assert>
 
  
    <!--
      Can retract a fact which doesnot exist.The fact that goldwatch17 
      is precious which doesnot exist is retracted.                                                         
    -->
  
  <Retract>
    <Atom>
      <Rel>precious</Rel>
      <Ind>goldwatch17</Ind>
    </Atom>
  </Retract>
 
</RuleML>
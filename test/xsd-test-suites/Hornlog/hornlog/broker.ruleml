<?xml version="1.0" encoding="UTF-8"?>
<RuleML xmlns="http://ruleml.org/spec"
  xmlns:xs="http://www.w3.org/2001/XMLSchema"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://ruleml.org/spec ../../../../xsd/hornlog.xsd">

<!-- a simplified broker definition -->

<Assert mapClosure="universal">

<Implies>
 <if>
  <And>
    <Atom>
      <op><Rel>want</Rel></op>
      <Ind>customer-of-broker</Ind>
      <Var>prod</Var>
    </Atom>
    <Atom>
      <op><Rel>deal</Rel></op>
      <Var>prod</Var>
      <Expr>
        <op><Fun>cost</Fun></op>
        <Ind>prod</Ind>
      </Expr>
      <Ind>benefit-of-prod</Ind>
    </Atom>
  </And>
 </if>
 <then>
  <Atom>
    <op><Rel>buy</Rel></op>
    <Var>broker</Var>
    <Var>prod</Var>
  </Atom>
 </then>
</Implies>

<Implies>
 <if>
  <Atom>
    <op><Rel>greater-or-equal</Rel></op>
    <Var>benefit</Var>
    <Var>cost</Var>
  </Atom>
 </if>
 <then>
  <Atom>
    <op><Rel>deal</Rel></op>
    <Var>prod</Var>
    <Var>cost</Var>
    <Var>benefit</Var>
  </Atom>
 </then>
</Implies>

  <Atom>
    <op><Rel>want</Rel></op>
    <Ind>miller</Ind>
    <Ind iri="http://www.stock.com/stock1"/>
  </Atom>

  <Atom>
    <op><Rel>want</Rel></op>
    <Ind>miller</Ind>
    <Ind iri="http://www.stock.com/stock2"/>
  </Atom>

</Assert>

</RuleML>
